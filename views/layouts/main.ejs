<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% if(typeof user !='undefined' && user && user.id) { %>
    <meta name="userId" content="<%= user.id %>">
    <% } %>
      <title>CourtClerk | Professional Legal Assistant</title>

      <!-- Font Awesome -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

      <!-- Bootstrap CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

      <!-- Custom CSS -->
      <link rel="stylesheet" href="/css/style.css">

      <!-- Markdown Parsing -->
      <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/dompurify/dist/purify.min.js"></script>
</head>

<body>
  <div class="container-fluid p-0">
    <div class="row g-0">
      <% if(typeof user !='undefined' && user) { %>
        <!-- Sidebar -->
        <div class="sidebar collapse d-lg-block" id="sidebarMenu">
          <div class="sidebar-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0 overflow-hidden text-nowrap"><i
                class="fas fa-balance-scale sidebar-brand-icon"></i>CourtClerk</h3>
          </div>

          <ul class="nav flex-column mt-3">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">
                <i class="fas fa-columns me-3"></i>
                <span>Dashboard</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/community">
                <i class="fas fa-users me-3"></i>
                <span>Legal Community</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/summarization">
                <i class="fas fa-file-contract me-3"></i>
                <span>Doc Summaries</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">
                <i class="fas fa-envelope-open-text me-3"></i>
                <span>Support</span>
              </a>
            </li>
          </ul>

          <h6 class="sidebar-heading text-truncate">
            Recent Matters
          </h6>

          <ul class="nav flex-column mb-2" style="max-height: 300px; overflow-y: auto;">
            <% if(typeof chats !='undefined' && chats) { %>
              <% chats.forEach(chat=> { %>
                <li class="nav-item">
                  <a class="nav-link text-truncate" href="/chats/<%= chat._id %>" title="<%= chat.title %>">
                    <i class="far fa-comment-alt me-3"></i>
                    <span>
                      <%= chat.title %>
                    </span>
                  </a>
                </li>
                <% }) %>
                  <% } %>
          </ul>

          <div class="mt-auto px-3 pb-3">
            <a href="/chats/new"
              class="btn btn-success w-100 shadow-sm d-flex align-items-center justify-content-center">
              <i class="fas fa-plus"></i>
              <span class="ms-2 btn-text">New Consultation</span>
            </a>
          </div>

          <div class="user-info">
            <div class="d-flex align-items-center mb-2">
              <img src="<%= user.profilePicture %>" alt="Profile" class="rounded-circle user-avatar me-2" width="36"
                height="36">
              <div class="overflow-hidden">
                <h6 class="mb-0 text-white text-truncate">
                  <%= user.name %>
                </h6>
                <small class="text-muted text-truncate d-block" style="font-size: 0.75rem;">
                  <%= user.userType.charAt(0).toUpperCase() + user.userType.slice(1) %> Account
                </small>
              </div>
            </div>
            <a href="/users/logout"
              class="btn btn-outline-danger btn-sm w-100 d-flex align-items-center justify-content-center">
              <i class="fas fa-sign-out-alt"></i> <span class="ms-2 btn-text">Logout</span>
            </a>
          </div>
        </div>

        <!-- Main content -->
        <main class="overflow-hidden">
          <!-- Mobile Sidebar Toggle -->
          <div
            class="d-lg-none mb-3 pb-2 border-bottom d-flex align-items-center bg-white p-3 shadow-sm mx-n3 mt-n3 sticky-top">
            <button class="btn btn-link p-0 text-dark me-3" type="button" data-bs-toggle="collapse"
              data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false"
              aria-label="Toggle navigation">
              <i class="fas fa-bars fa-lg"></i>
            </button>
            <h5 class="m-0 text-dark fw-bold">CourtClerk</h5>
          </div>

          <div class="container-fluid px-3 px-md-4">
            <%- include('../partials/messages') %>
              <%- body %>
          </div>
        </main>
        <% } else { %>
          <!-- Content for non-authenticated users -->
          <main class="col-12 ms-0 p-0 w-100" style="margin-left: 0; min-height: 100vh;">
            <div class="container-fluid p-0">
              <%- include('../partials/messages') %>
                <%- body %>
            </div>
          </main>
          <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
</body>

</html>