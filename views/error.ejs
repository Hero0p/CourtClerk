<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8 text-center">
      <div class="card">
        <div class="card-body">
          <h1 class="display-1 text-danger mb-4"><%= status %></h1>
          <h2 class="mb-4">Oops! Something went wrong</h2>
          <p class="lead mb-4"><%= error %></p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="/" class="btn btn-primary btn-lg px-4 gap-3">
              <i class="fas fa-home me-2"></i>
              Go to Home
            </a>
            <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg px-4">
              <i class="fas fa-arrow-left me-2"></i>
              Go Back
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 