<div class="container-fluid px-0">
  <div class="page-header">
    <div>
      <h2 class="h3 mb-0">Consultations</h2>
      <p class="text-muted small mb-0">Manage your legal conversations</p>
    </div>
    <div>
      <a href="/chats/new" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus me-2"></i> New
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
          <% if (chats && chats.length> 0) { %>
            <div class="list-group list-group-flush">
              <% chats.forEach(chat=> { %>
                <a href="/chats/<%= chat._id %>" class="list-group-item list-group-item-action border-0 px-4 py-3">
                  <div class="d-flex w-100 justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                      <div class="avatar-sm bg-light rounded-circle p-2 me-3 text-center"
                        style="width: 40px; height: 40px;">
                        <i
                          class="<%= chat.isAIChat ? 'fas fa-robot text-primary' : 'fas fa-user-tie text-secondary' %>"></i>
                      </div>
                      <div>
                        <h6 class="mb-1 fw-bold text-dark">
                          <%= chat.title %>
                        </h6>
                        <% if (chat.messages && chat.messages.length> 0) { %>
                          <small class="text-muted">
                            Last updated: <%= new Date(chat.updatedAt).toLocaleDateString() %>
                              <%= new Date(chat.updatedAt).toLocaleTimeString([], {hour: '2-digit' , minute:'2-digit'})
                                %>
                          </small>
                          <% } else { %>
                            <small class="text-muted">New consultation</small>
                            <% } %>
                      </div>
                    </div>
                    <div class="d-flex align-items-center">
                      <span class="badge bg-light text-dark me-3 fw-normal">
                        <%= chat.messages ? chat.messages.length : 0 %> msgs
                      </span>
                      <i class="fas fa-chevron-right text-muted small"></i>
                    </div>
                  </div>
                </a>
                <% }) %>
            </div>
            <% } else { %>
              <div class="text-center py-5">
                <div class="mb-3">
                  <i class="far fa-comments fa-3x text-light-gray opacity-25"></i>
                </div>
                <h5 class="text-muted mb-2">No consultations yet</h5>
                <p class="text-muted small mb-4">Start a new conversation with our AI or a lawyer.</p>
                <a href="/chats/new" class="btn btn-primary">
                  <i class="fas fa-plus me-2"></i>
                  Start New Consultation
                </a>
              </div>
              <% } %>
        </div>
      </div>
    </div>
  </div>
</div>